<div class="vehicle">
  <div class="container-header">
    <h1 class="vehicle-name"><%= @vehicle.name %></h1>
    <%= link_to "Back", vehicles_path, class:'btn btn-primary' %>
  </div>

  <p class="vehicle-user">
    <em>
      Posted by <%= @vehicle.user.name %> - Online since <%=
      @vehicle.user.created_at %>
    </em>
  </p>
  <div class="vehicle-margin">
    <div class="container">
      <div class="row">
        <div class="col">
          <p class="vehicle-decription">
            <strong>About your magic vehicle:</strong><br />
            <%= @vehicle.description %>
          </p>
        </div>
        <div class="col">
          <p class="vehicle-price"><%= @vehicle.price %> â‚¬</p>
          <p class="vehicle-location">
            <strong> To pick up at:</strong> <br />
            <%= @vehicle.location %>
          </p>
        </div>
      </div>
    </div>
    <div class="booking-form"><%= render "./shared/booking_form.html" %></div>
  </div>
</div>
