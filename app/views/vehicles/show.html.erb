<div class="container">
  <div class="vehicle">
    <div class="flexbox">
      <%= render "./shared/carousel.html" %>
        <div class="right-column">
          <div>
            <div class="container-header">
              <h1 class="vehicle-name">
                <%= @vehicle.name %>
                  <% if current_user %>
                    <% if @vehicle.bookings.booked_now.from_user(current_user.id).count> 0 %>
                      <%= image_tag 'reserved.png' %>
                        <% end %>
                          <% end %>
              </h1>
              <div class="rating-stars">
                <% if @vehicle.ratings %>
                  <% rating = @vehicle.ratings[:mean].to_i %>
                  <% rating.times do %>
                    <i class="fas fa-star"></i>
                  <% end %>
                  <% (5 - rating).times do %>
                    <i class="far fa-star"></i>
                  <% end %>
                <% end %>
              </div>
              <br />
              <%= link_to "Back" , vehicles_path, class:'btn btn-primary' %>
            </div>
            <p class="vehicle-user">
              <em>
                Posted by <%= @vehicle.user.name %>
              </em>
            </p>
          </div>
          <p class="vehicle-price">
            <%= @vehicle.price %> â‚¬
          </p>
          <p class="vehicle-decription">
            <strong>About your magic vehicle:</strong><br />
            <%= @vehicle.description %>
          </p>

          <p class="vehicle-location">
            <strong> To pick up at:</strong> <br />
            <%= @vehicle.location %>
          </p>
        </div>


    </div>

    <div class="booking-form">
      <%= render "./shared/booking_form.html" %>
    </div>
    <br>
  </div>
</div>
